<!DOCTYPE html>
<html lang="ru">

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <title>{% block title %}{% endblock %}</title>

    {% block stylesheets %}
        <link href="{{ asset('vendor/bootstrap/css/bootstrap.min.css') }}" rel="stylesheet">

        <link href="{{ asset('vendor/fontawesome-free/css/all.min.css') }}" rel="stylesheet">
        <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,700,300italic,400italic,700italic"
              rel="stylesheet" type="text/css">

        <link href="{{ asset('css/app.min.css') }}" rel="stylesheet">
    {% endblock %}
</head>

<body>

<div class="d-flex" id="wrapper">

    <div class="bg-light border-right" id="sidebar-wrapper">
        <div class="sidebar-heading">BlaBlaArticle</div>
        <div class="list-group list-group-flush">
            <a href="dashboard.html" class="list-group-item list-group-item-action bg-light">Рабочий стол</a>
            <a href="{{ path('app_article_create') }}" class="list-group-item list-group-item-action">Создать статью</a>
            <a href="dashboard_history.html" class="list-group-item list-group-item-action bg-light">История статей</a>
            <a href="{{ path('app_subscription_list') }}" class="list-group-item list-group-item-action{{ app.request.get('_route') == 'app_subscription_list' ? ' active' : ' bg-light'}}">Подписка</a>
            <a href="{{ path('app_profile') }}" class="list-group-item list-group-item-action bg-light">Профиль</a>
            <a href="{{ path('app_article_modules') }}" class="list-group-item list-group-item-action{{ app.request.get('_route') == 'app_article_modules' ? ' active' : ' bg-light'}}">Модули генератора</a>
        </div>
    </div>

    <div id="page-content-wrapper">

        <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
            <button class="btn btn-primary" id="menu-toggle">Скрыть меню</button>

            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Показать/Скрыть навигацию">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav ml-auto mt-2 mt-lg-0">
                    <li class="nav-item active">
                        <a class="nav-link" href="{{ path('app_logout') }}">Выйти</a>
                    </li>
                </ul>
            </div>
        </nav>

        <div class="container-fluid">
            <h1 class="mt-4">{{ block('title') }}</h1>


            {% for flashMessage in app.flashes('info_message') %}
                <div class="alert alert-info" role="alert">{{ flashMessage }}</div>
            {% endfor %}

            {% for flashMessage in app.flashes('error_message') %}
                <div class="alert alert-danger" role="alert">{{ flashMessage }}</div>
            {% endfor %}

            {% block content %}
            {% endblock %}

        </div>
    </div>

</div>
{% block javascripts %}

    <script src="{{ asset('vendor/jquery/jquery.min.js') }}"></script>
    <script src="{{ asset('vendor/bootstrap/js/bootstrap.bundle.min.js') }}"></script>
    <script src="{{ asset('vendor/jquery-easing/jquery.easing.min.js') }}"></script>
    <script src="{{ asset('js/dashboard.js') }}"></script>
    <script src="{{ asset('js/scripts.js') }}"></script>
{% endblock %}
</body>

</html>
