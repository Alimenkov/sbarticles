{% use 'bootstrap_4_layout.html.twig' with form_row, form_errors, file_widget %}

{%- block form_row -%}
    {%- set widget_attr = {} -%}
    {%- if help is not empty -%}
        {%- set widget_attr = {attr: {'aria-describedby': id ~"_help"}} -%}
    {%- endif -%}

    <div class="form-label-group {% if row_attr.class is defined %}{{ row_attr.class }}{% endif %}"{% with {attr: row_attr} %}{{ block('attributes') }}{% endwith %}>
        {{- form_widget(form, widget_attr) -}}
        {{- form_label(form) -}}
        {{- form_help(form) -}}
    </div>
{%- endblock form_row -%}

{% block form_errors -%}
    {%- if errors|length > 0 -%}
        <span class="{% if form is not rootform %}invalid-feedback{% else %}alert alert-danger{% endif %} d-block">
        {%- for error in errors -%}
            <span class="d-block">
                    <span class="form-error-message">{{ error.message }}</span>
            </span>
        {%- endfor -%}
        </span>
    {%- endif %}
{%- endblock form_errors %}

{% block form_label -%}
    {% if label is not same as(false) -%}
        {%- if compound is defined and compound -%}
            {%- set element = 'legend' -%}
            {%- set label_attr = label_attr|merge({class: (label_attr.class|default('') ~ ' col-form-label')|trim}) -%}
        {%- else -%}
            {%- set label_attr = label_attr|merge({for: id}) -%}
        {%- endif -%}
        {% if required -%}
            {% set label_attr = label_attr|merge({class: (label_attr.class|default('') ~ ' required')|trim}) %}
        {%- endif -%}
        {% if label is empty -%}
            {%- if label_format is not empty -%}
                {% set label = label_format|replace({
                    '%name%': name,
                    '%id%': id,
                }) %}
            {%- else -%}
                {% set label = name|humanize %}
            {%- endif -%}
        {%- endif -%}
        <{{ element|default('label') }}{% if label_attr %}{% with { attr: label_attr } %}{{ block('attributes') }}{% endwith %}{% endif %}>
        {%- if form_errors(form)|length < 1 -%}
            {%- if translation_domain is same as(false) -%}
                {%- if label_html is same as(false) -%}
                    {{- label -}}
                {%- else -%}
                    {{- label|raw -}}
                {%- endif -%}
            {%- else -%}
                {%- if label_html is same as(false) -%}
                    {{- label|trans(label_translation_parameters, translation_domain) -}}
                {%- else -%}
                    {{- label|trans(label_translation_parameters, translation_domain)|raw -}}
                {%- endif -%}
            {%- endif -%}
        {%- else -%}
            {% block form_label_errors %}{{- form_errors(form) -}}{% endblock form_label_errors %}
        {%- endif -%}
        </{{ element|default('label') }}>
    {%- else -%}
        {%- if errors|length > 0 -%}
            {%- set widget_attr = {} -%}
            {%- if help is not empty -%}
                {%- set widget_attr = {attr: {'aria-describedby': id ~"_help"}} -%}
            {%- endif -%}

            <div class="{% if row_attr.class is defined %}{{ row_attr.class }}{% endif %}"{% with {attr: row_attr} %}{{ block('attributes') }}{% endwith %}>
                {{- form_widget(form, widget_attr) -}}
                {{- form_label(form) -}}
                {{- form_help(form) -}}
            </div>
        {%- endif -%}
    {%- endif -%}
{%- endblock form_label %}

{% block file_widget -%}
    {{- block('form_widget_simple') -}}
{% endblock %}
