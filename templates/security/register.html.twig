{% extends 'security/security_base.html.twig' %}


{% block title %}
    Регистрация
{% endblock %}

{% block form %}

    {{ form_errors(registrationForm) }}

    {{ form_start(registrationForm, { attr: { class: 'form-signin'} }) }}

    {{ form_row(registrationForm.name) }}

    {{ form_row(registrationForm.email) }}

    {{ form_row(registrationForm.plainPassword) }}

    {{ form_row(registrationForm.confirmPassword) }}

    <button class="btn btn-lg btn-primary btn-block text-uppercase" type="submit">Регистрация</button>

    {{ form_end(registrationForm) }}

    <hr class="my-4">

    <div class="text-center"><a href="{{ path('app_login') }}">Я уже зарегистрирован</a></div>
{% endblock %}
